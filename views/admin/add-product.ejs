<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
      <form action="/admin/add-product" class="product-form w-full" method="POST">
       <div class="card parent-div-input flex items-center mt-20">
        <div class="card-body center w-96">
        <div class="form-control mb-6 w-full">
            <label for="title" class="text-gray-500 font-bold mb-4 md:mb-0 pr-4">Title</label>
            <input type="text" name="title" id="title" class="input-shop bg-gray-200 appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500">
        </div>
        <div class="form-control mb-6 w-full">
            <label for="imageUrl" class="text-gray-500 font-bold mb-4 md:mb-0 pr-4">Image URL</label>
            <input type="text" name="imageUrl" id="imageUrl" class="inline-block input-shop bg-gray-200 appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500">
        </div>
        <div class="form-control mb-6 w-full">
            <label for="price" class="text-gray-500 font-bold mb-4 md:mb-0 pr-4">Price</label>
            <input type="number" name="price" id="price" class="input-shop bg-gray-200 appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" step="0.01">
        </div>
        <div class="form-control mb-6 w-full">
            <label for="description" class="text-gray-500 font-bold mb-4 md:mb-0 pr-4">Description</label>
            <textarea type="text" name="description" id="description" class="inline-block input-shop bg-gray-200 appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" rows="5" placeholder="Description">

            </textarea>
        </div>
        <button type="submit" class="shadow mt-10 bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">Add to Cart</button>
        </div>
        </div>
      </form>
    </main>
<%- include('../includes/end.ejs') %>